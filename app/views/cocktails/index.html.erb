
<div class="container" >
  <h1>Cocktails</h1>
  <ul>
    <% @cocktails.each do |cocktail| %>
    <li> <%= link_to cocktail.name, cocktail_path(cocktail) %> </li>
    <% end %>
  </ul>



<%= link_to "Create a cocktail", new_cocktail_path, class: "btn btn-success btn-sm"  %>
</div>


<div class="card" style="width: 18rem;">
  <div class="card-body">
    <h5 class="card-title">Cocktails </h5>
    <p class="card-text"> <% @cocktails.each do |cocktail| %> </p>
                            <li>  <%= link_to cocktail.name, cocktail_path(cocktail) %> </li>
                          <% end %>
    <a href="/cocktails/new" class="btn btn-primary"> Create a cocktail </a>
  </div>
</div>
